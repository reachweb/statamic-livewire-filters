{
    "name": "reachweb/statamic-livewire-filters",
    "description": "Livewire filters for Statamic collections.",
    "keywords": [
        "Statamic",
        "Livewire"
    ],
    "homepage": "https://livewirefilters.com/",
    "license": "proprietary",
    "type": "statamic-addon",
    "authors": [
        {
            "name": "Iosif Chatzimichail",
            "email": "iosif@reach.gr",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "info@reach.gr"
    },
    "autoload": {
        "psr-4": {
            "Reach\\StatamicLivewireFilters\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reach\\StatamicLivewireFilters\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Livewire Filters",
            "description": "Livewire powered live filtering for Statamic collections"
        }, 
        "laravel": {
            "providers": [
                "Reach\\StatamicLivewireFilters\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan statamic-livewire-filters:update --ansi || true"
        ]
    },
    "require": {
        "laravel/framework": "^11.0 || ^12.0",
        "illuminate/support": "^11.0 || ^12.0",
        "statamic/cms": "^5.0.0",
        "marcorieser/statamic-livewire": "^5.0"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "orchestra/testbench": "^9.0 || ^10.0",
        "phpunit/phpunit": "^11.0|^12.0",
        "laravel/pint": "^1.15",
        "spatie/laravel-ray": "^1.0"
    }
}
